{
  "manifest_version": 3,
  "name": "Relative Grade Estimator",
  "description": "Unofficial tool to estimate relative grades based on anonymized class data.",
  "version": "0.1.0",

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://vtop.vit.ac.in/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
